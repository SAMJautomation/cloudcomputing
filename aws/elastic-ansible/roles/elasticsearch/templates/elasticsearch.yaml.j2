# roles/elasticsearch/templates/elasticsearch.yaml.j2

node.name: {{ ansible_hostname }}
cluster.name: {{ elastictester }}

node.data: {{ node_master }}
node.master: {{ node_master }}

# machine learning
node.ml: {{ node_ml }}

# to join cluster nodes need to konw hostname/IP of some nodes
discover.seed_hosts:
    - 127.0.0.1

http.port: 9200
transport.tcp.port: 9300

############################## Paths ######################################
path.data: "/mnt/es1/{{ ansible_hostname }}"
path.logs: "/opt/elastic/logs/{{ ansible_hostname }}/"
path.repo:
    - /mnt/nfs/elastic

action.auto_create_index: true
